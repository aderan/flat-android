<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/flat_blue</item>
        <item name="colorSwitchThumbNormal">@color/flat_white</item>
        <item name="android:colorForeground">@color/flat_gray</item>
    </style>

    <style name="PlaybackSeekbarStyle">
        <item name="android:maxHeight">8dp</item>
        <!--        <item name="android:indeterminateOnly">false</item>-->
        <!--        <item name="android:indeterminateDrawable">@color/colorAccent</item>-->
        <item name="android:progressDrawable">@drawable/playback_seek_bar_drawable</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:thumb">@drawable/playback_thumb_shape</item>
    </style>

    <style name="RoomTextTitle">
        <item name="android:textColor">#444E60</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoomTextCaption">
        <item name="android:textColor">@color/flat_day_night_text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoomDialogTextTitle">
        <item name="android:textColor">#444E60</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>